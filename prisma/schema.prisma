// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id              String   @id
  source          String
  title           String
  brief           String?
  content         String?
  url             String?
  published_at    BigInt
  ai_note         String?
  sentiment_score Float?
  created_at      BigInt
  
  @@index([source, published_at])
}

model Report {
  id          String   @id @default(uuid())
  start_time  BigInt
  end_time    BigInt
  content     String
  created_at  BigInt
  
  @@index([created_at])
}
